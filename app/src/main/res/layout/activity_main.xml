<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">



    <ImageButton
        android:id="@+id/call_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/auto_view"
        android:layout_above="@+id/auto_view"
        android:background="@drawable/call" />

    <ImageButton
        android:id="@+id/assist_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toLeftOf="@+id/auto_view"
        android:layout_centerVertical="true"
        android:background="@drawable/assisstant" />

    <ImageButton
        android:id="@+id/speed_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/auto_view"
        android:layout_below="@+id/auto_view"
        android:background="@drawable/speedometer" />

    <ImageButton
        android:id="@+id/music_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/auto_view"
        android:layout_above="@+id/auto_view"
        android:background="@drawable/music" />

    <ImageButton
        android:id="@+id/SOS_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/auto_view"
        android:layout_centerVertical="true"
        android:background="@drawable/sos" />

    <ImageButton
        android:id="@+id/whatsapp_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/auto_view"
        android:layout_below="@+id/auto_view"
        android:background="@drawable/whatsapp" />

    <ImageView
        android:id="@+id/auto_view"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:src="@drawable/helmet_background" />

    <Button
        android:id="@+id/setting_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_settings_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/help_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/ic_help_outline_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>